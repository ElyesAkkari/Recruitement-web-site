{% extends 'testing.html.twig' %}
{% block content %}
<div class="cust-heading">


<div class="col-md-12">

    <div class="section-heading">
        <h4><u>Ajouter Une Reponse</u></h4>
        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

        <div class="form-group row">
            <label class="col-sm-6 col-form-label">Reponse :</label>
            <div class="col-sm-10">
                {{ form_widget(form.reponse,{'attr': {'class': 'form-control'}} )}}
                <div class="alert-danger">{{ form_errors(form.reponse) }}</div>
            </div>
        </div>

        <div class="form-check-inline">
            {{ form_widget(form.valid,{'attr': {'class': 'form-check-input'}}) }}
            <label class="form-check-label">Reponse correct ?</label>
        </div>

        <div class="form-group row">
            <label class="col-sm-6 col-form-label">Reponse Ã  la question :</label>
            <div class="col-sm-10">
                {{ form_widget(form.quest,{'attr': {'class': 'form-control'}} )}}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" title="ajouter">Ajouter</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

</div>
{% endblock %}