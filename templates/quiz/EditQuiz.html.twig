{% extends 'testing.html.twig' %}
{% block content %}
<div class="cust-heading">
    <div class="col-md-12">
        <div class="section-heading">
            <h4><u>Modifier Un QUIZ</u></h4>
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-6 col-form-label">Titre du Quiz :</label>
                <div class="col-sm-10">
                    {{ form_widget(form.titre,{'attr': {'class': 'form-control'}} )}}
                    <div class="alert-danger">{{ form_errors(form.titre) }}</div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" title="modifier">Modifier</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

</div>
{% endblock %}