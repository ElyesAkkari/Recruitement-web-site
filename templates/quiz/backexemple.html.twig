{% extends 'back.html.twig' %}
{% block content %}
    <style>
        fieldset{
            border: 2px groove #caf7e3;
            margin-left: 2px;
            margin-right: 2px;
            margin-bottom: 15px;

            padding: 0.35em 5px 0.625em 5px;

        }
        legend {
            height: 50%;
            width: auto;

            margin-left: 45%;
            padding: 2px 1px 2px 1px;

        }
    </style>
    <div class="right_col">
        <div class="container">
{% set foo = 1 %}
{% set numr = 0 %}
<form method="post" >

        {% for q in question %}
    <fieldset >
        <legend> <h4>Question {{ foo }}</h4></legend>

            <label class="form-control">{{ q.body }}</label>

            {% for r in reps %}
            {% if r.quest==q %}
                {% set state = r.valid %}
                    <div class="form-check form-check-inline ">
                     <input  class="form-check-input" type="radio" name="flexRadio{{ foo }}" id="{{ numr }}" value={{ state }}>
                    <label class="form-check-label" for="flexRadio{{ foo }}">
                        {{ r.reponse }}
                    </label>
                    </div>

                {% set numr = numr + 1 %}
            {% endif %}
            {% endfor %}
        {% set foo = foo + 1 %}
    </fieldset>
{% endfor %}

</form>
    </div>

    </div>
{% endblock %}