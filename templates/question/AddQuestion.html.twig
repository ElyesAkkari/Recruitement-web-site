{% extends 'testing.html.twig' %}
{% block content %}
<div class="cust-heading">


    <div class="col-md-12">
        <div class="section-heading">
            <h4><u>Ajouter Une Question</u></h4>
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group row">
                <label  class="col-sm-6 col-form-label">Question :</label>
                <div class="col-sm-10">
                    {{ form_widget(form.body,{'attr': {'class': 'form-control'}} )}}
                    <div class="alert-danger">{{ form_errors(form.body) }}</div>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-6 col-form-label">Nombre de Reponses :</label>
                <div class="col-sm-10">
                    {{ form_widget(form.nbr_rep,{'attr': {'class': 'form-control'}}) }}
                    <div class="alert-danger">{{ form_errors(form.nbr_rep) }}</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-6 col-form-label">Associ√© au quiz :</label>
                <div class="col-sm-10">
                    {{ form_widget(form.quiz,{'attr': {'class': 'form-control'}} )}}
                </div>
            </div>


                <div class="form-group row">
                    <div class="col-sm-10">
                        <button title="ajouter" type="submit" class="btn btn-primary">Ajouter</button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}