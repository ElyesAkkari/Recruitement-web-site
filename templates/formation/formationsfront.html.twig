
{% extends 'testing.html.twig' %}
{% block content %}
    <!-- Page Content -->
    <div class="page-heading about-heading header-text" style="background-image: url(/eltemp/assets/images/heading-6-1920x500.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h4>Formation</h4>
                        <h2>Se Former Autrement !</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="products">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="contact-form">
                        <form>


                            {{ form_start(form, {attr: {class: 'filter js-filter-form'}}) }}

                            <div class="spinner-border js-loading" role="status" aria-hidden="true" style="display: none">
                                <span class="sr-only">Loading...</span>
                            </div>
                            <h5 style="margin-bottom: 15px">Rechercher</h5>
                            <div> <small>
                            {{ form_row(form.q) }}
                                </small>
                            </div>
                            <h5 style="margin-bottom: 15px; margin-top: 10px"">Cat√©gories</h5>
                            <div>
                                <small>
                                {{ form_widget(form.categories) }}
                                </small>
                            </div>

                            <h5 style="margin-bottom: 15px; margin-top: 10px">Prix</h5>
                            <div>
                                <small>
                                    {{ form_row(form.min) }}
                                    {{ form_row(form.max) }}
                                </small>
                            </div>
                            <h5 style="margin-bottom: 15px; margin-top: 10px">Promotions</h5>
                            <div><small>
                            {{ form_row(form.promo) }}
                            </small></div>
                            <button type="submit" class="btn btn-primary w-100">Filtrer</button>

                            {{ form_end(form) }}

                        </form>
                    </div>
                </div>





                <div class="col-md-9">
                    <div class="row">
                        {% for formation in formations %}
                            <div class="col-md-6 ">


                                <div class="product-item ">

                                    <img src="{{ asset('uploads/images/') }}{{formation.image}}" alt="" >

                                    <div class="down-content">
                                        <a ><h4>{{formation.nom }}</h4></a>

                                        <h6><b>Prix</b> {{formation.prix}} TND</h6>
                                        <h6><i class="fa fa-clock-o"></i> Nombre des Heures : {{formation.nbrheures}}</h6>
                                        <h4><i class="fa fa-calendar"></i> {{ formation.datedeb|date("m/d/Y") }}</h4>
                                        <small>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <img src="{{ asset('uploads/images/') }}{{ formation.id }}{{ formation.nom ~'.png' }}" height="100px" width="100px"/>
                                                </div>
                                                <div class="col-sm-6"><strong><a title="Type" href="{{ path("commantaire",{"id":formation.id}) }}" class="btn btn-primary btn-lg btn-block"> detaille</a></strong> &nbsp;&nbsp;&nbsp;&nbsp;
                                                </div>
                                            </div>
                                        </small>
                                    </div>

                                </div>
                            </div>
                        {%endfor%}



                        <div class="col-md-12">
                            <ul class="">
                                {{ knp_pagination_render(formations) }}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}


