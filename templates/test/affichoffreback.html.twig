                                        <th>Type de l'offre</th>
                                        <th>  Date debut </th>
                                        <th>  Date fin </th>
                                        <th>Description</th>
                                        <th>departement</th>

                                        <th> image </th>
                                        <th>EMAIL</th>
                                        <th>Supprimer</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for e in offre %}
                                        <tr>
                                            <th scope="row">{{ e.id }}</th>
                                            <td>{{ e.noms }}</td>
                                            <td>{{ e.type }}</td>
                                            <td>{{ e.datedeb|date("d-m-Y")}}</td>
                                            <td>{{ e.datefin|date("d-m-Y")}}</td>
                                            <td>{{ e.description }}</td>
                                            <td>{{ e.departement }}</td>
                                            <td><img style="height:100px; width:100px" src="assets/images/properties/{{ e.imageName}}" alt="Bicycle" ></td>
                                            <td>{{ e.mailen }}</td>
                                            <td><a href="{{ path("supprimeroffre",{"id":e.id}) }}">Supprimer </a></td>


                                        </tr>
                                    {% endfor %}
                                </table>


                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                </div>

            </div>
        </div>
