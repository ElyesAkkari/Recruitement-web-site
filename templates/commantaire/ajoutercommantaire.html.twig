    <div class="col-md-9">
     <div class="card">
      <div class="card-body">
       <h4 class="card-title">Recent Comments</h4>
      </div>
      <div class="comment-widgets scrollable">

       <!-- Comment Row -->
       {% for comment in formation.commantaires %}
        <div class="d-flex flex-row comment-row">

         <div class="active w-100" style="padding: 10px">
          <h6 class="font-medium" style="color: blue">{{ app.user.username }} :</h6>
          <span class="m-b-15 d-block">{{ comment.body }}</span>
          <div class="comment-footer">
           <td>{{ comment.created|date("Y-m-d H:i:s") }}</td>


