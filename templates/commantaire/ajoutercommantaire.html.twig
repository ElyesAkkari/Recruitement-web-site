{% extends 'testing.html.twig' %}
{% block content %}
 <div class="page-heading about-heading header-text" style="background-image: url(/eltemp/assets/images/heading-6-1920x500.jpg);">
  <div class="container">
   <div class="row">
    <div class="col-md-12">
     <div class="text-content">
      <h4>Formation :</h4>
      <h2>{{formation.nom }}</h2>
      <div>
       {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
         {{ message }}
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
         </button>
        </div>
       {% endfor %}
       {% for message in app.flashes('update') %}
        <div class="alert alert-success alert-dismissible fade show">
         {{ message }}
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
         </button>
        </div>
       {% endfor %}
       {% for message in app.flashes('delete') %}
        <div class="alert alert-danger alert-dismissible fade show">
         {{ message }}
         <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
         </button>
        </div>
       {% endfor %}
      </div>
     </div>
    </div>
   </div>
  </div>
 </div>

 <div class="products">
  <div class="container">
   <div class="row">
    <div class="col-md-7 col-sm-8">
     <p class="lead">
      <i class="fa fa-calendar"></i> {{ formation.datedeb|date("m/d/Y") }}
     </p>

     <br>
     <br>

     <div class="form-group">
      <h5>le nembre des participants : {{formation.nbrpartricipant}}</h5>
      <h5>le nembre d'heures : {{formation.nbrheures}}</h5>
     </div>
     <h5>Description : </h5>
     <p>{{formation.descrption}}</p>
     <div class="card " style="margin-bottom: 20px">
      {{ form_start(comment) }}
      <div   class="input-group">
       {{ form_widget(comment.body ) }}
      </div>
      <br>
      {{ form_widget(comment.commenter, { 'attr' : { 'class' : 'appsLand-btn subscribe-btn ' } } ) }}
      {{ form_end(comment) }}
     </div>
     <br>
     <br>
    </div>

    <div class="col-md-5 col-sm-4">
     <div>
      <img class="img-fluid wc-image" src="{{ asset('uploads/images/') }}{{formation.image}}" alt="formation" >

      {{ form_start(participant,{'attr':{'novalidate':'novalidate'}}) }}
      {{ form_widget(participant.Participer,{'attr':{'class':'btn btn-primary a-btn-slide-text','style':'width : 100%'}}) }}
      {{ form_end(participant) }}
     </div>

     <br>
     <br>
    </div>
   </div>
  </div>
 </div>

