            {% endblock%}

        {% block content %}
            <!-- Page Content -->
            <br>
            <br>
            <div class="products">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9 col-sm-8">
                            <p class="lead">
                                <i class="fa fa-map-marker"></i> Tunisia &nbsp;&nbsp;
                                <i class="fa fa-calendar"></i> {{ event.date|date('d-m-Y') }} &nbsp;&nbsp;
                            </p>

                            <br>
                            <br>

                            <div class="form-group">
                                <h3>{{ event.nom }}</h3>
                            </div>
                            {{ event.description }}
                            <br>
                            <br>
                            <br>
                            <h4>Sponsorisé par :</h4>
                            <br>
                            {% for  s in sponsor %}
                                <img src="{{ asset('uploads/images/' ~ s.image)}}"
                                     style="width: 100px ; height:100px"></a>
                            {% endfor %}
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>
                            <div class="form-check">
                                <div class="form-check">
                                <h2>Liste des commentaires</h2>
                                {% for comment in event.comments %}
                                    <p>Publié par {{ comment.nickname }} le {{ comment.created_at|date("d/m/Y H:i:s") }}</p>
                                    <div>{{ comment.content|raw }}</div>
                                {% endfor %}
                                </div>
                                <div class="form-check" id="ajout-commentaire">
                                <h2>Donner un avis ou un commentaire ici :</h2>
                                {{ form(com) }}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3 col-sm-4">
                            <div class="contact-form">
                                <div class="form-group">
                                </div>

                            </div>

                            <div>
                                <div class="contenu">
                                    <div class="poste">
                                        <div class="texte">
                                            Thanks for rating us!</div>
                                        <div class="modifier">
                                            EDIT</div>
                                    </div>
                                    <div class="star-widget">
                                        <h3>Noter évenement</h3>
                                        <input type="radio" name="rate" id="rate-5">
                                        <label for="rate-5" class="fa fa-star"></label>
                                        <input type="radio" name="rate" id="rate-4">
                                        <label for="rate-4" class="fa fa-star"></label>
                                        <input type="radio" name="rate" id="rate-3">
                                        <label for="rate-3" class="fa fa-star"></label>
                                        <input type="radio" name="rate" id="rate-2">
                                        <label for="rate-2" class="fa fa-star"></label>
                                        <input type="radio" name="rate" id="rate-1">
                                        <label for="rate-1" class="fa fa-star"></label>
                                        <form action="#">
                                            <textarea cols="30" placeholder="Describe your experience.."></textarea>
                                            <!-- Due to more textarea tags I got a problem So I've changed the textarea tag to textare. Please correct it. -->
