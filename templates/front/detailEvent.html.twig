                            </div>
                                <img src="{{ asset('uploads/images/' ~ event.image)}}"
                                     style="width: 200px ; height:200px">
                                <div>
                                    <button class="btn btn-danger">Participer à l'évenement</button>

                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bootstrap core JavaScript -->
            <script src="{{ asset("eltemp/vendor/jquery/jquery.min.js") }}"></script>
            <script src="{{ asset("eltemp/vendor/bootstrap/js/bootstrap.bundle.min.js") }}"></script>


            <!-- Additional Scripts -->
            <script src="{{ asset("eltemp/assets/js/custom.js") }}"></script>
            <script src="{{ asset("eltemp/assets/js/owl.js") }}"></script>
            <script src="{{ asset("https://kit.fontawesome.com/a076d05399.js") }}"></script>
            <script>
                window.onload = () =>{
                    document.querySelectorAll("[data-reply]").forEach(element => {
                        element.addEventListener("click", function () {
                            document.querySelector("#comments_parentid").value = this.dataset.id;
                        });
                    });
                }
            </script>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
            <script src="{{ asset('rating.js') }}"></script>

        {% endblock %}