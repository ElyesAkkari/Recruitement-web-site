{% extends 'testing.html.twig' %}
{% block content %}

    <style>
        .resume{
            padding-left: 0;
            padding-right: 0;
        }
    </style>
    <div class="resume">
    <div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
        {% for message in app.flashes('update') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
        {% for message in app.flashes('delete') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
    </div>
        <div>
            <div class="row">

                <div class="col-md-12">
                    <div class="text-content">
                        <h4>Liste des Entretien</h4>


                    </div>
                </div>
            </div>
            <div class="col" align="center">
                <table border="1" class="table table-hover table-secondary">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Recruteur</th>
                        <th scope="col">Resultat</th>
                        <th scope="col">Temps</th>
                        <th scope="col">Numero Tel Candidat</th>
                        <th scope="col">Mail Candidat</th>
                        <th scope="col">Etat</th>
                    </tr>
                    </thead>

                    {% for e in entretient %}
                        <tr> {% if app.user.id == e.user.id %}
                            <td>{{ e.datedeb|date("d/m/Y") }}</td>
                            <td>{{ e.recruteur }}</td>
                            <td>{{ e.resultat }}</td>
                            <td>{{ e.temps|date("h:i:s")}}</td>
                            <td> {{ e.NumeroTelephone }}</td>

                            <td>{{ e.mail }}</td>
                            <td>{{ e.etat }}</td>


{% endif %}

                        </tr>
                    {% endfor %}

                </table>
            </div>
        </div>
    </div>
{% endblock %}